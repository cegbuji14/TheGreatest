        "version": "0.2.0",
        "configurations": [
          {
            "name": "Debug GOAT.cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/GOAT",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,   // <-- Opens external terminal window
            "preLaunchTask": "build GOAT.cpp",
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
          }
        ]
      }
      